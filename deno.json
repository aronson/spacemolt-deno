{
    "compilerOptions": {
        "lib": ["deno.ns", "deno.window"],
        "strict": true
    },
    "lint": {
        "rules": {
            "tags": ["recommended"]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 120,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false,
        "proseWrap": "preserve"
    },
    "include": ["src/"],
    "lock": true,
    "nodeModulesDir": "none",
    "tasks": {
        "run": "deno run --allow-net --allow-env src/main.ts",
        "dev": "deno run --allow-net --allow-env --watch src/main.ts",
        "prepare": "deno compile --allow-net --allow-env --output dist/spacemolt-mcp src/main.ts",
        "check": "deno check src/main.ts",
        "lint": "deno lint",
        "fmt": "deno fmt",
        "fmt:check": "deno fmt --check"
    }
}
